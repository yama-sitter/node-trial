    <title>New Article</title>

    <link
      rel="canonical"
      href="https://getbootstrap.jp/docs/5.0/examples/starter-template/"
    />

    <%- include('../../_share/stylesheets.ejs') %>

    <!-- Bootstrap core CSS -->
    <link
    href=https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css
    rel="stylesheet"
    integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
    crossorigin="anonymous">

    <!-- Favicons -->
    <link
      rel="apple-touch-icon"
      href="https://getbootstrap.jp/docs/5.0/assets/img/favicons/apple-touch-icon.png"
      sizes="180x180"
    />
    <link
      rel="icon"
      href="https://getbootstrap.jp/docs/5.0/assets/img/favicons/favicon-32x32.png"
      sizes="32x32"
      type="image/png"
    />
    <link
      rel="icon"
      href="https://getbootstrap.jp/docs/5.0/assets/img/favicons/favicon-16x16.png"
      sizes="16x16"
      type="image/png"
    />
